<%= error_messages_for :section %>

<h2>Create a new Section</h2>

<% form_for :section do |f| -%>
<fieldset>
<ul class="form">
<li>
	<label for="name">Name</label>
	<%= f.text_field :name %>
</li><br/>

<li>
	<%= f.hidden_field :semester_id, :value => @semester.id %>
</li><br/>


<p class="submit"><%= submit_tag 'Create' %></p>
</ul>
</fieldset>
<% end -%>