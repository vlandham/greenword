<h1><%= _('Edit Post') %></h1>

<h2><%= link_to h(@post.topic.title), topic_path(@post.topic) %></h2>

<%= link_to(_('Delete post'), post_path( :topic_id => @post.topic, :id => @post, :page => params[:page]), 
      :class => "utility", :method => :delete, :confirm => _('Delete this post forever?')) %>

<%= error_messages_for :post %>
<% form_for :post, :html => { :method => :put }, 
     :url  => post_path(:id => params[:topic_id], :id => @post, :page => params[:page]) do |f| -%>
<p id="post_body"><%= f.text_area :body %></p>
<%= submit_tag _('Save') %> or <%= link_to _('cancel'), topic_path(:id => params[:topic_id], :page => params[:page]) %>
<% end -%>