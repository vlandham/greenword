<h3><%=h test_set.name if test_set%></h3>
<h4>Words</h4>
<table>

<% test_set.words.each do |word| %>
	<%= render(:partial => "word", :locals => {:word => word}) %>
<% end %>
</table>

<h4>Situations</h4>
<table>
<% test_set.completions.each do |completion| %>
	<%= render(:partial => "completion", :locals => {:completion => completion}) %>
<% end %>
</table>

<h4>Scenario</h4>
<% if test_set.scenarios %>
	<table>
	<% test_set.scenarios.each do |scenario| %>

		<%= render(:partial => "scenario", :locals => {:scenario => scenario}) %>
	<% end %>
	</table>
<% else %>
	<p>No Scenario Present</p>
<% end %>