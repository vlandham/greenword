<h2><%= "Viewing: ".t+@test.name %></h2>

<h3>Words:</h3>
<ul>
<% unless @test.words.nil? %>
<% @test.words.each do |word| %>
	<li>
		<%=h word.value %>
	</li>
<% end %>
<% end %>
</ul>
<br/>
<p>
	<%= link_to "Edit Words".t, :action => :words, :id => @test  %>
</p>

<h3>Completions:</h3>
<ul>
	<% unless @test.completions.nil? %>
	<% @test.completions.each do |completion| %>
	<li>
		<%=h completion.value %>
	</li>
	<% end %>
	<% end %>
</ul>
<br/>
<p><%= link_to "Edit Completions".t, :action => :completions, :id => @test %></p>

<h3>Scenario:</h3>
<ul>
	<% unless @test.scenarios.nil? %>
		<% @test.scenarios.each do |scenario| %>
		<li>
			<%=h scenario.value %>
		</li>
		<% end %>
	<% end %>
</ul>
<br/>
<p>
	<%= link_to "Edit Scenarios".t, :action => :scenarios, :id => @test %>
</p>
<span class="right-side">
<%= link_to icon("cancel"), {:controller => "test", 
					   :action => "destroy",
					   :id => @test.id },
					 	{ :method => :post,
						  :confirm => "Really delete #{@test.name} This will remove all words, completions and scenarios associated with this test"}%>
</span>

<br/>
<br/>
<p>
	<%= link_to "Back", :action => :index %>
</p>