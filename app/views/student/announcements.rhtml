<h2><%= "Announcements".t %></h2>
<div class="announcements">
	<% @announcements.each do |announcement| %>
		<div class="announcement">
			<h4><%= announcement.title %></h4>
			<div class="date">
				<%= time_ago_in_words(announcement.created_on) %>
			</div>
			<p><%= announcement.value %></p>
			<div class="author">
				by <%=h announcement.user.whole_name %>
			</div>
		</div>
	<% end %>
	
</div>
<p><%= link_to "back", :action => :index %></p>